<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="contenedor" prefHeight="400.0" prefWidth="500.0" stylesheets="@pantalla2.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pantalla2.Controlador2">
   <children>
      <HBox alignment="CENTER" prefHeight="412.0" prefWidth="520.0">
         <children>
            <TableView fx:id="tabla">
              <columns>
                <TableColumn fx:id="nombre" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="apellido" prefWidth="75.0" text="Apellido" />
                  <TableColumn id="mail" fx:id="mail" prefWidth="75.0" text="Mail" />
                  <TableColumn id="edad" fx:id="edad" prefWidth="75.0" text="Edad" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <ProgressBar fx:id="progreso" prefWidth="200.0" progress="0.0" rotate="90.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
